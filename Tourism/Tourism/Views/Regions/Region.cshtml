@model Tourism.Data.Models.Region

<div class="jumbotron jumbotron-fluid height100p content">
    <div class="region">
        <h1>@Model.name</h1>
    </div>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/@Model.img" class="d-block w-100" alt="...">
            </div>
            <!--<div class="carousel-item">
                  <img src="../img/' . $name . '_slider2.jpg" class="d-block w-100" alt="...">
            </div>
              <div class="carousel-item">
                  <img src="../img/' . $name . '_slider3.jpg" class="d-block w-100" alt="...">
              </div>
              -->
        </div>
    </div>
</div>
<section class="sec1">
    <div class="container">
        <div class="row">
            <div class="col-sm-4" data-aos="fade-up"
                 data-aos-duration="1000"
                 data-aos-delay="1000">
                <div class="placeBox Box1">
                    @Model.map
                </div>
            </div>

            <div class="col-sm-4" data-aos="fade-up"
                 data-aos-duration="1000"
                 data-aos-delay="1000">
                <div class="placeBox Box2">
                    <div class="info">
                        <h2>@Model.name</h2>
                        <p>@Model.description<p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
